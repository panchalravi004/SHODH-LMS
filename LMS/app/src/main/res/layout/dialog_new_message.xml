<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/white_all_round"
    android:elevation="4sp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_top_round"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Message"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/h2" />

        <ImageButton
            android:id="@+id/btnNewMsgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_close_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5sp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Subject"
            android:textColor="@color/lms_grey_150"
            android:textSize="@dimen/h2" />

        <EditText
            android:id="@+id/etNewMsgSubject"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/white_all_round_blue_border"
            android:elevation="2sp"
            android:ems="10"
            android:hint="@string/enter_your_subject"
            android:inputType="textPersonName"
            android:padding="10sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/lms_grey_100" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Message"
            android:textColor="@color/lms_grey_150"
            android:textSize="@dimen/h2" />

        <EditText
            android:id="@+id/etNewMsgMessage"
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/white_all_round_blue_border"
            android:elevation="2sp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/enter_your_message"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="14sp"
            android:maxLines="5"
            android:minLines="2"
            android:padding="15sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="@color/lms_grey_100" />

        <Button
            android:id="@+id/btnNewMsgSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:backgroundTint="@color/lms_blue"
            android:text="send"
            app:cornerRadius="20sp" />

    </LinearLayout>

</LinearLayout>