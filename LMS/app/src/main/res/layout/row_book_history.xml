<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/white_all_round"
    android:elevation="4sp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="15sp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <View
            android:id="@+id/viewGreenCircle"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/lms_green_circle"
            android:scaleX="3"
            android:scaleY="3"
            android:translationX="-30sp"
            android:translationY="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBookHistoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Python Programming Books"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h3" />

                <ImageButton
                    android:id="@+id/btnHistoryShowMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_black_arrow" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableLayoutMoreHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text="Late Fee" />

                    <TextView
                        android:id="@+id/tvBookHistoryLateFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:text="Rs. 120" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:text="Lost Charges" />

                    <TextView
                        android:id="@+id/tvBookHistoryLostFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5sp"
                        android:text="Rs. 150" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBookHistoryIssueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5sp"
                    android:text="Issue Date 10-11-2022" />

                <TextView
                    android:id="@+id/tvBookHistoryReturnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lms_green_all_round_white_border"
                    android:paddingLeft="8sp"
                    android:paddingTop="5sp"
                    android:paddingRight="8sp"
                    android:paddingBottom="5sp"
                    android:text="Return on : 10-12-2022"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>