<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="10sp"
    android:animateLayoutChanges="true"
    android:background="@drawable/white_all_round"
    android:elevation="2sp"
    android:padding="5sp">

    <androidx.cardview.widget.CardView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_margin="5sp"
        app:cardCornerRadius="65sp">

        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/demo_book" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="Python Programming ..."
            android:textColor="@color/black"
            android:textSize="@dimen/h3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNotificationMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5sp"
                android:text="Available Now"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:srcCompat="@drawable/icon_check_green" />

            <Button
                android:id="@+id/btnMarkAsRead"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:backgroundTint="@color/lms_green"
                android:text="Mark as read"
                android:textSize="8sp"
                app:cornerRadius="20sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>