<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="@drawable/white_all_round"
    android:elevation="2sp"
    android:gravity="center"
    android:padding="5sp"
    android:animateLayoutChanges="true">

    <androidx.cardview.widget.CardView
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_margin="5sp"
        app:cardCornerRadius="65sp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/demo_book" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python Programming ..."
            android:textColor="@color/black"
            android:textSize="@dimen/h3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Now"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lms_green_all_round"
                app:srcCompat="@drawable/icon_check" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lms_green"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="Mark as read"
                android:textSize="10sp"
                app:cornerRadius="20sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>