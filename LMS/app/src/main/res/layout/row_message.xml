<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="10sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="10sp"
    android:animateLayoutChanges="true"
    android:background="@drawable/white_all_round"
    android:elevation="4sp"
    android:orientation="vertical"
    android:padding="8sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMsgTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Technical Issue"
            android:textColor="@color/black"
            android:textSize="@dimen/h3" />

        <ImageButton
            android:id="@+id/btnMsgOpenMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_right_black_arrow" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMsgUserMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I face some technical issue while using your android application please help" />

    <TextView
        android:id="@+id/tvMsgReplyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reply:"
        android:textColor="@color/black"
        android:textSize="@dimen/h3"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvMsgReplyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sorry for that, we are working on your issue, we are fix this issue as soon as possible, Thank you."
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgMsgCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:srcCompat="@drawable/icon_check_green" />
</LinearLayout>